		 */
	    list = RestAPI.request(VMList_URL, GET, token);
		Initialization.deleteAllVM(list, token);
	     
		//list = RestAPI.request(firewall_List_URL, GET, token);
		//Initialization.closeAllFirewall(list, token);
		
