package com.solbox.delivery.vm;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

public class JsonParser {

	static void parseVMList(String jsonString, String token) throws Exception {
		
		JSONObject jsonObject = new JSONObject(jsonString);
		JSONArray jsonArray = jsonObject.getJSONArray("servers");
		
		for(int i=0; i<jsonArray.length();i++ ) {
			JSONObject servers = jsonArray.getJSONObject(i);
			String VM_ID = servers.getString("id");
			Utils.request(App.forceDeleteVMURL, App.POST, token, App.USER_AGENT, App.CONTENT_TYPE, RequestBody.forceDeleteVM(), VM_ID);
			
		}			
	}
}
